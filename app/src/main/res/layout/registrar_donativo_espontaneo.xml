<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".RegistrarDonativo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"/>

        <TextView
            android:id="@+id/textView33"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="REGISTRAR DONATIVO"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:text="Fecha y hora:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtFechaHoraDE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:text="@string/txtFechaHora"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="Ubicacion"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtUbicacionDE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="@string/txtUbicacion"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:text="Folio"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtFolioDE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_noeditable"
                android:ems="10"
                android:focusable="false"
                android:textColor="#C4C4C4" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="Tienda"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtTiendaDE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_noeditable"
                android:ems="10"
                android:focusable="false"
                android:textColor="#C4C4C4" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="Responsable"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtResponsableDE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_editable"
                android:ems="10"
                android:hint="Nombre de quien entrega"
                android:lines="1" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="Rol"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtRolDE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/form_editable"
                android:ems="10"
                android:hint="Rol que ocupa"
                android:lines="1" />

            <Button
                android:id="@+id/btnProductosDE"
                android:layout_width="125dp"
                android:layout_height="55dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#F3071E"
                android:gravity="end"
                android:text="@string/btnProductos"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>